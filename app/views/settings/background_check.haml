- content_for :title_header do
  %h1 Background Check

= render :partial => "layouts/left_hand_navigation", :locals => { :links => settings_links_for(@current_user, @current_community) }

#person_settings_form.left-navi-section.settings-section
  %table
    %thead
      %tr
        %th Name
        %th Icon
        %th Status
    %tbody
      - @background_check_container.each do |bcc|
        - person_bcc_status = get_person_status @current_user, bcc.id
        - person_bcc_status.each do |status|
          - person_status = get_status status
          %tr{style: "background-color: #{person_status.bg_color}"}
            %td= bcc.name
            %td= image_tag bcc.icon(:thumb)
            %td= person_status.status
  